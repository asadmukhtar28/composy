<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asad.composy">

    <application
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Composy">
        <activity
            android:name=".multiselection.MultiSelectionActivity"
            android:label="@string/title_activity_multi_selection"
            android:theme="@style/Theme.Composy" />
        <activity
            android:name=".singleselection.SingleSelectionActivity"
            android:label="@string/title_activity_single_selection"
            android:theme="@style/Theme.Composy" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Composy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>